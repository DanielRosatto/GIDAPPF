<%= if valuable_gidappf_field.object.value.nil?  then
    valuable_gidappf_field.date_field :value,
    onfocusout:
      "$(document).ready(function() {
        if(Number.isNaN((new Date($(event.target).val())).getTime()) ) {
            $(event.target).val('');
            $( \"<p class='validation-error'>Date error.</p>\" ).appendTo($(event.target).parent());
          }
        });"
  else
    valuable_gidappf_field.date_field :value,
      value: valuable_gidappf_field.object.value.to_date,
      onfocusout:
        "$(document).ready(function() {
          if(Number.isNaN((new Date($(event.target).val())).getTime()) ) {
              $(event.target).val('');
              $( \"<p class='validation-error'>Date error.</p>\" ).appendTo($(event.target).parent());
            }
          });"
  end
%>
