<h3><%= title %></h3>
<table>
  <thead>
     <tr>
      <th>Student</th>
      <th colspan=".<%= comms_period.count.to_s %>." >Commission:</th>
     </tr>
  </thead>

  <tbody remote="true">
    <% profiles_period.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <% comms_period.each do |ts| %>
          <td>
            <!-- redirecciona a la accion selected_commission con los parametros id y box_selected con valores dados por check_box_tag -->
            <%= check_box_tag(
                "p_"+ p.id.to_s+"_"+:box_selected.to_s+"_"+ts.id.to_s,
                p.documents.first.user.usercommissionroles.first.commission_id,
                ts.commission.id == p.documents.first.user.usercommissionroles.last.commission_id,
                onclick: "$(document).ready(function() {
                      window.location.href='"+sets_students_selected_commission_path(id: p.id, box_selected: ts.id.to_s)+
                    "'});",
                :disabled  => ts.end_date < Date.today || !ts.enabled
              )%>
            <%= label_tag(ts.commission.name) %>
          </td>
      <% end %>
     </tr>
   <% end %>
  </tbody>
</table>
