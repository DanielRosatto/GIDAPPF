<p id="notice"><%= notice %></p>

<h1><%= t('body.gidappf_entity.member.action.report.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('body.gidappf_entity.member.action.report.student') %></th>
      <th><%= t('body.gidappf_entity.member.action.report.regular') %></th>
      <th><%= t('body.gidappf_entity.member.action.report.inst') %></th>
      <th><%= t('body.gidappf_entity.member.action.report.act') %></th>
      <th><%= t('body.gidappf_entity.member.action.report.abs') %></th>
      <th>[mins]</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= link_to "#{document[0].name}", document[0] %></td>
        <td><%= if document[0].listable? then 'âœ“' end %></td>
        <td><%= document[1].count %></td>
        <td><% document[1].each_with_index do |calif,index|%>
          <%= link_to "#{(index+1).ordinalize}", calif %>
          <% end %></td>
        <td><% document[2].each do |abs|%>
          <%= abs.created_at.strftime("%d/%m/%y") %>
          <% end %></td>
        <td><%= document[0].absence_mins %></td>
      </tr>
    <% end %>
  </tbody>
</table>

