
    <!-- Button trigger modal -->
    <a type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalClassRooms">
      <%= "#{t('body.gidappf_entity.time_sheet_hour.action.multiple_new.comm_modal.button')} "  %>
      <strong>&raquo;</strong>
    </a>

    <!-- Modal -->
    <div class="modal fade" id="ModalClassRooms" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLabel" ><%= t('body.gidappf_entity.time_sheet_hour.action.multiple_new.cri_modal.title') %></h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <table class='gidappf-table'>
              <thead>
                <tr>
                  <th><%= t('body.gidappf_entity.class_room_institute.models')  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_monday')).split(' ').last.capitalize %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_tuesday')).split(' ').last.capitalize  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_wednesday')).split(' ').last.capitalize  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_thursday')).split(' ').last.capitalize  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_friday')).split(' ').last.capitalize  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_saturday')).split(' ').last.capitalize  %></th>
                  <th><%= (t('body.gidappf_entity.class_room_institute.attributes.available_sunday')).split(' ').last.capitalize  %></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @class_room_institutes.each do |class_room_institute| %>
                  <tr>
                    <td><%= button_to( class_room_institute.to_list, parametrize_class_room_institute_path(class_room_institute), :method => :get, :disabled => disable_cri(class_room_institute.id)) %></td>
                    <% 7.times do |i_day|%>
                      <td><%= class_room_institute.free_time(i_day) %></td>
                    <% end %>
                    <td><%= link_to t('body.common_entity.action.show'), class_room_institute %></td>
                    <td><%= link_to t('body.common_entity.action.edit'), edit_class_room_institute_path(class_room_institute) %></td>
                    <td><%= link_to t('body.common_entity.action.destroy'), class_room_institute, method: :delete, data: { confirm: t('body.common_entity.action.confirm_msg') } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <%= button_to "#{t('body.common_entity.action.new')} #{t('body.gidappf_entity.time_sheet_hour.model')}", { action:  'multiple_new' }, class: "btn btn-primary", :method => :get %>
          </div>
        </div>
      </div>
    </div>
