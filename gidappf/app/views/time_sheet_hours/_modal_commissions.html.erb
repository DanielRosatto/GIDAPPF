<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCommissions">
  <%= "#{t('body.common_entity.action.new')} #{t('body.gidappf_entity.time_sheet_hour.model')}"  %>
</button>

<!-- Modal -->
<div class="modal fade" id="ModalCommissions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel" ><%= t('body.gidappf_entity.time_sheet_hour.action.multiple_new.comm_modal.title')%></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class='gidappf-table'>
          <thead>
            <tr>
              <th><%= t('body.gidappf_entity.commission.models')  %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @time_sheets.each do |time_sheet| %>
              <tr>
                <td><%= button_to( time_sheet.commission.name, parametrize_time_sheet_path(time_sheet), :method => :get, :disabled => disable_ts(time_sheet.id) ) %></td>
                <td><%= link_to t('body.common_entity.action.show'), time_sheet %></td>
                <td><%= link_to t('body.common_entity.action.edit'), edit_time_sheet_path(time_sheet) %></td>
                <td><%= link_to t('body.common_entity.action.destroy'), time_sheet, method: :delete, data: { confirm: t('body.common_entity.action.confirm_msg') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <%= render 'modal_class_rooms' %>
      </div>
    </div>
  </div>
</div>
