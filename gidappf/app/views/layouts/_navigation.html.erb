<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
              data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%
        gidappf_img_nav=ProfileValue.new
        gidappf_img_nav.active_stored.attach(io: File.open(Rails.root.join("storage/seeds/images/icons/icon64x48px.png")), filename: 'noimg')
      %>
      <%= link_to (image_tag(gidappf_img_nav.active_stored, class: "gidappf-img-nav")), root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <!-- ############################################################### -->
        <!-- # Renderización del menú basado en roles                      # -->
        <!-- ############################################################### -->
        <%= render RoleAccess.get_user_links(current_user) %>
        <li>
          <%= form_tag(home_search_path, method: 'get', class: 'navbar-form navbar-right') do %>
            <%= search_field_tag 'search', nil, class: 'form-control', placeholder: t('home.action.search.text')  %>
            <%= submit_tag t('home.action.search.button'), class: 'btn btn-default', :name => nil %>
          <% end %>
        </li>
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=I18n.locale%><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "English", root_path(locale: :en) %></li>
            <li><%= link_to "Español", root_path(locale: :es) %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
