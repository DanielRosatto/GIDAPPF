<p id="notice"><%= notice %></p>

<h1>
  <% if !params[:role_ids].nil? && params[:role_ids].include?(Role.find_by(enabled: true, level: 20.0).id.to_s) %>
    <%= t('body.gidappf_entity.profile.action.index.student') %>
  <% elsif !params[:role_ids].nil? && params[:role_ids].include?(Role.find_by(enabled: true, level: 29.0).id.to_s) %>
    <%= t('body.gidappf_entity.profile.action.index.docent') %>
  <% else %>
    <%= t('body.gidappf_entity.profile.models') %>
  <% end %>
</h1>

<table>
  <thead>
    <tr>
      <th><%= t('body.gidappf_entity.profile.attributes.name') %></th>
      <th><%= t('body.gidappf_entity.profile.attributes.description') %></th>
      <th><%= t('body.gidappf_entity.profile.attributes.valid_to') %></th>
      <th><%= t('body.gidappf_entity.profile.attributes.valid_from') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to "#{profile.name}", profile %></td>
        <td>
          <% if profile.description.length > 50 then %>
            <%= profile.description.first(50)+"…" %>
          <% else %>
            <%= profile.description %>
          <% end %>
        </td>
        <td><%= profile.valid_to.strftime("%d/%m/%Y") %></td>
        <td><%= profile.valid_from.strftime("%d/%m/%Y") %></td>
        <td><%= link_to t('body.common_entity.action.edit'), edit_profile_path(profile) %></td>
        <td><%= link_to t('body.common_entity.action.destroy'), profile, method: :delete, data: { confirm: t('body.common_entity.action.confirm_msg') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

