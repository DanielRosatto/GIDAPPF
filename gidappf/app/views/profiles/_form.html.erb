<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :valid_to %>
    <%= form.datetime_select :valid_to %>
  </div>

  <div class="field">
    <%= form.label :valid_from %>
    <%= form.datetime_select :valid_from %>
  </div>

  <%= form.fields_for :profile_keys, profile.profile_keys do |s| %>
    <%= s.hidden_field :key, :value => Profile.first.profile_keys[s.index].key %>
    <%= s.fields_for :profile_values, profile.profile_keys[s.index].profile_values do |e| %>
      <div class="field">
        <%= e.label Profile.first.profile_keys[s.index].key %>
        <% unless s.index ==2 then %>
          <%= e.text_field :value %>
        <% else %>
          <%= e.text_field :value, :readonly => true %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
